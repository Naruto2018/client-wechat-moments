<view class="weui-flex">
    <!--头像-->
    <navigator class="user-avatar" url="/pages/profile/index?uid={{user.uid}}">
        <image wx:if="{{user.decorate}}" src="{{user.decorate}}" class="avatar-decorate" mode="scaleToFill"></image>
        <image src="{{user.avatar}}" class="avatar-img" mode="scaleToFill"></image>
    </navigator>

    <!--信息-->
    <view class="weui-flex__item">
        <!--头部信息-->
        <navigator class="user-info weui-flex" url="/pages/profile/index?uid={{user.uid}}">
            <view class="user-nickname">{{user.nickname}}</view>

            <view wx:if="{{user.verifiedStatus === 2}}" class="user-verified">
                <image src="{{user.verifiedIcon}}" mode="heightFix"></image>
            </view>

            <view class="user-name">@{{user.username}}</view>

            <view wx:if="{{user.roleIconDisplay === 1 && user.roleIcon}}" class="user-role-icon">
                <image src="{{user.roleIcon}}" mode="heightFix"></image>
            </view>

            <view wx:if="{{user.roleNameDisplay === 1 && user.roleName}}" class="user-role-name">
                <text class="weui-badge">{{user.roleName}}</text>
            </view>

            <slot name="icons-header"></slot>
        </navigator>

        <!--附属信息-->
        <slot name="icons-body"></slot>
        <slot name="interactive"></slot>
        <slot name="bio"></slot>
        <slot name="btn"></slot>
    </view>
</view>
