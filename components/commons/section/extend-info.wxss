@import '/assets/styles/weui.wxss';

.frame-box-info {
  position: relative;
  background: #e9ecef;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.box-content {
  padding: 0 12px;
  font-size: 14px;
  line-height: 1.15;
  flex: 1;
}

.box-title {
  font-size: 17px;
}

.box-button {
  padding-right: 14px;
}

/* 正方形信息框架 */
.frame-basic {
  height: 50px;
}

.frame-basic .box-cover {
  width: 50px;
  height: 50px;
}

.frame-basic .box-content {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 大号正方形信息框架 */
.frame-big {
  height: 100px;
}

.frame-big .box-cover {
  width: 100px;
  height: 100px;
}

.frame-big .box-content {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

/* 纵图信息框架 */
.frame-portrait {
  height: 100px;
}

.frame-portrait .box-cover {
  width: 90px;
  height: 100px;
}

.frame-portrait .box-content {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
}

/* 横图信息框架 */
.frame-landscape {
  height: 70px;
}

.frame-landscape .box-cover {
  width: 110px;
  height: 70px;
}

.frame-landscape .box-content {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
