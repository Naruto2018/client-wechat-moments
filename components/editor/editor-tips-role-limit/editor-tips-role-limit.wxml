<view class="weui-form-preview">
    <view class="weui-form-preview__hd" aria-role="option">
        <view class="weui-form-preview__item">
            <label class="weui-form-preview__label">角色权限限制信息：</label>
        </view>
    </view>
    <view aria-labelledby="p1 js_a11y_comma p2 js_a11y_comma p3" class="weui-form-preview__bd" aria-role="option">
        <view class="weui-form-preview__item">
            <label class="weui-form-preview__label">账号主角色</label>
            <text class="weui-form-preview__value">{{roleLimit.roleName}}</text>
        </view>
        <view class="weui-form-preview__item">
            <label class="weui-form-preview__label">限制类型</label>
            <text class="weui-form-preview__value" wx:if="{{roleLimit.limitType === 1}}">
                循环时间段限制
            </text>
            <text class="weui-form-preview__value" wx:if="{{roleLimit.limitType === 2}}">
                每天的某个时间段限制
            </text>
        </view>
        <view class="weui-form-preview__item">
            <label class="weui-form-preview__label">日期范围</label>
            <text class="weui-form-preview__value">
                {{roleLimit.limitTimeStart}} - {{roleLimit.limitTimeEnd}}
            </text>
        </view>
        <view class="weui-form-preview__item">
            <label class="weui-form-preview__label">限制规则</label>
            <text class="weui-form-preview__value" wx:if="{{roleLimit.limitRule===1}}">
                可以发表，但是需要审核
            </text>
            <text class="weui-form-preview__value" wx:if="{{roleLimit.limitRule===2}}">禁止发表</text>
        </view>
    </view>
</view>