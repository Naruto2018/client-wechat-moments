.editor-extend-info {
    width: 90%;
    margin: 0 auto;
}

.editor-extend-info .small-square {
    position: relative;
    background: #e9ecef;
    width: 100%;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.editor-extend-info .small-square .delete {
    position: absolute;
    left: 0;
    top: 0;
    width: 30px;
    height: 30px;
    background: #ffff;
}

.editor-extend-info .small-square .cover {
    width: 50px;
    height: 50px;
}

.editor-extend-info .small-square .content {
    padding: 0 12px;
    font-size: 14px;
    line-height: 1.15;
    flex: 1;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.editor-extend-info .small-square .button {
    padding-right: 14px;
}


