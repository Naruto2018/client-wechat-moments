@import "/assets/styles/weui.wxss";
@import "/assets/styles/fsui.wxss";

.editor-authority {
    width: 90%;
    margin: 0 auto;
}

.editor-authority .weui-cell {
    border: 1px solid lightgray;
    padding: 10px 16px;
    border-bottom: none;
}

.editor-authority mp-cell:last-of-type .weui-cell {
    border-bottom: 1px solid silver;
}

.editor-authority .authority-head .weui-cell {
    background: #fff3cd;
}

.editor-authority mp-cell view {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
