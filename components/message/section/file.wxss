.file-image image {
  width: 200px;
}

.file-video video {
  width: 100%;
}

.file-audio audio {
  width: 100%;
}

.file-document {
  width: 100%;
  display: flex;
  align-items: center;
  background-color: var(--weui-BG-0);
  color: var(--weui-FG-1);
  font-size: 14px;
  border-radius: 4px;
  margin-top: 10px;
}

.file-document .doc-icon {
  background-color: var(--weui-ORANGE);
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
  color: var(--weui-FG-3);
  padding: 12px 16px 8px 16px;
}

.file-document .doc-icon image {
  width: 30px;
  height: 30px;
  margin: 0;
  padding: 0;
}

.file-document .doc-name {
  margin-left: 8px;
}
