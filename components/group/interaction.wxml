<view class="mark-btn">
    <!-- 点赞 -->
    <view wx:if="{{ group.interaction.likeSetting }}" class="weui-btn weui-btn_mini {{ group.interaction.likeStatus ? 'weui-btn_primary' : 'weui-btn_default' }}" data-group="{{ group }}" bind:tap="onClickGroupLike">
        <image wx:if="{{ !group.interaction.likeStatus }}" class="weui-btn_cell__icon" src="/assets/interaction/like.png"></image>
        <image wx:if="{{ group.interaction.likeStatus }}" class="weui-btn_cell__icon" src="/assets/interaction/like-active.png"></image>
        {{ group.likeCount ? group.likeCount : '' }}
    </view>

    <!-- 点踩 -->
    <view wx:if="{{ group.interaction.dislikeSetting }}" class="weui-btn weui-btn_mini {{ group.interaction.dislikeStatus ? 'weui-btn_primary' : 'weui-btn_default' }}" data-group="{{ group }}" bind:tap="onClickGroupDislike">
        <image wx:if="{{ !group.interaction.dislikeStatus }}" class="weui-btn_cell__icon" src="/assets/interaction/dislike.png"></image>
        <image wx:if="{{ group.interaction.dislikeStatus }}" class="weui-btn_cell__icon" src="/assets/interaction/dislike-active.png"></image>
        {{ group.dislikeCount ? group.dislikeCount : '' }}
    </view>

    <!-- 关注 -->
    <view wx:if="{{ group.interaction.followSetting }}" class="weui-btn weui-btn_mini {{ group.interaction.followStatus ? 'weui-btn_primary' : 'weui-btn_default' }}" data-group="{{ group }}" bind:tap="onClickGroupFollow">
        <image wx:if="{{ !group.interaction.followStatus }}" class="weui-btn_cell__icon" src="/assets/interaction/follow.png"></image>
        <image wx:if="{{ group.interaction.followStatus }}" class="weui-btn_cell__icon" src="/assets/interaction/follow-active.png"></image>
        {{ group.followCount ? group.followCount : '' }}
    </view>

    <!-- 屏蔽 -->
    <view wx:if="{{ group.interaction.blockSetting }}" class="weui-btn weui-btn_mini {{ group.interaction.blockStatus ? 'weui-btn_primary' : 'weui-btn_default' }}" data-group="{{ group }}" bind:tap="onClickGroupBlock">
        <image wx:if="{{ !group.interaction.blockStatus }}" class="weui-btn_cell__icon" src="/assets/interaction/block.png"></image>
        <image wx:if="{{ group.interaction.blockStatus }}" class="weui-btn_cell__icon" src="/assets/interaction/block-active.png"></image>
        {{ group.blockCount ? group.blockCount : '' }}
    </view>
</view>