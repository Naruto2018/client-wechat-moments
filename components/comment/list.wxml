<view class="card ^detail-list">
    <view class="card-header">
        <!--成员信息-->
        <member member="{{comment.member}}">
            <view slot="icons-header" class="member-icons weui-flex">
                <image src="https://fresns.cn/prototype/assets/images/temp/member-icon.png" mode="heightFix"></image>
            </view>
            <view slot="interactive" class="weui-flex">
                <view class="content-time">{{comment.timeFormat}}</view>
                <view class="content-author">
                    <text class="weui-badge post-author">作者</text>
                </view>
                <view class="content-location">
                    <image class="weui-btn_cell__icon" src="/assets/images/icons/location.png"></image>上海虹桥国际机场
                </view>
            </view>
        </member>
    </view>
    <!--角标-->
    <view class="card-label" style="display:none;">
        <image src="https://fresns.cn/prototype/assets/images/temp/label.png" mode="aspectFit"></image>
    </view>
    <view class="card-body ^{{fsui}}">
        <!--扩展内容-->
        <slot name="extend-top"></slot>
        <!--评论文本-->
        <slot name="replyTo"></slot>
        <contentType disabled="{{false}}" comment="{{comment}}"></contentType>
        <!--附件文件-->
        <slot name="files"></slot>
        <!--扩展内容-->
        <slot name="extend-bottom"></slot>
        <!--附属信息-->
        <view class="comment-btn">
            <navigator class="weui-btn weui-btn_mini weui-btn_primary" url="">评论专用按钮</navigator>
        </view>
        <!--热评-->
        <slot name="previewComment"></slot>
    </view>
    <view class="card-footer ^{{fsui}}">
        <!--功能按钮-->
        <view class="weui-flex">
            <view class="weui-flex__item" bind:tap="onClickLike"
                  data-comment="{{comment}}"
            >
                <a class="fs_btn" bindtap="thread_like">
                    <image src="/assets/images/icons/default_like.png" class="card-footer-icon" mode="aspectFit"></image>
                    <text class="card-footer-text">{{comment.commentLikeCount}}</text>
                </a>
            </view>
            <view class="weui-flex__item">
                <a class="fs_btn" bindtap="thread_comment">
                    <image src="/assets/images/icons/default_comment.png" class="card-footer-icon" mode="aspectFit"></image>
                    <text class="card-footer-text">{{comment.commentCount}}</text>
                </a>
            </view>
            <view class="weui-flex__item">
                <a class="fs_btn" bindtap="thread_share">
                    <image src="/assets/images/icons/default_share.png" class="card-footer-icon" mode="aspectFit"></image>
                </a>
            </view>
            <view class="weui-flex__item"></view>
            <view class="item_more" bindtap="thread_more">
                <a class="fs_btn" bindtap="thread_more">
                    <image src="/assets/images/icons/default_more.png" class="card-footer-icon" mode="aspectFit"></image>
                </a>
            </view>
        </view>
    </view>
    <slot name="parentPost"></slot>
</view>
