.page {
  padding: 10px 10px 100px 10px;
}

.message {
  margin-bottom: 20px;
}

.avatar-img {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-bottom: -7px;
  margin-left: 15px;
  margin-right: 15px;
}

.message-content {
  padding: 8px 10px;
  border-radius: 5px;
}

.message-content-me {
  background-color: var(--weui-TEXTGREEN);
  float: right;
  margin-left: 60px;
}

.message-content-it {
  background-color: var(--weui-BG);
  margin-right: 60px;
}

.message-file-me {
  float: right;
  margin-left: 60px;
}

.message-file-it {
  margin-right: 60px;
}

.send-message .weui-tabbar__label {
  width: 90%;
  margin: 0 auto;
  text-align: left;
  border-radius: 36px;
  background-color: var(--weui-TAG-BACKGROUND-BLACK);
  color: var(--weui-TAG-TEXT-BLACK);
  padding: 8px 16px;
  font-size: 16px;
}
