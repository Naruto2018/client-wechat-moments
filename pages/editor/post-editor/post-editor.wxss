@import "/assets/styles/iconfont.wxss";

.editor-container {
    padding: 0 20px;
    position: relative;
    display: flex;
    flex-direction: column;
}

.editor-container .editor-bottom {
    height: 32px;
    display: flex;
    align-content: center;
    justify-content: space-between;
}

.editor-container .editor-bottom .editor-bottom-anonymous {
    display: flex;
    align-content: center;
    justify-content: center;
}

.editor-container .editor-bottom-buttons {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 10px;
}

.editor-container .editor-bottom-buttons > view {
    width: 120px;
    height: 32px;
    border-radius: 4px;
    text-align: center;
    line-height: 32px;
    border: 1px solid silver;
}

.editor-container .editor-submit-buttons {
    width: 100%;
    height: 40px;
    line-height: 40px;
    margin: 10px auto 0;
    border-radius: 4px;
    background: #198754;
    color: #fff;
    text-align: center;
}
