.weui-media-box,
.interactive-group {
  background-color: var(--weui-BG-2);
}

.interactive-group {
  overflow: hidden;
  padding: 0 20px 15px 20px;
}

.interactive-group .weui-media-box__info {
  margin-top: 0;
  padding-bottom: 0;
}

.interactive-btn {
  margin-top: 15px;
}

.group-extensions {
  overflow: hidden;
  background-color: var(--weui-BG-2);
  padding-bottom: 20px;
  margin-top: 15px;
}

.extension-box {
  float: left;
  width: 25%;
  padding-top: 20px;
}

.extension-box navigator {
  text-align: center;
  font-size: 14px;
}

.extension-box .extension-icon image {
  width: 30px;
  height: 30px;
}

.extension-box .extension-label {
  color: var(--weui-FG-0);
}
