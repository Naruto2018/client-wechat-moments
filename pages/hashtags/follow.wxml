    </view>
    <view class="weui-flex__item weui-navbar__item">
      <navigator url="/pages/hashtags/blocking" open-type="redirect">我屏蔽</navigator>
    </view>
  </view>

  <!--帖子列表（我关注的话题，这些话题名下的帖子列表）-->
