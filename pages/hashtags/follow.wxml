    <post generic:contentType="list" fsui="list-style">
      <view class="file-video">
        <image src="https://fresns.org/prototype/assets/images/temp/video.gif" class="video_gif" mode="widthFix"></image>
        <a class="weui-btn weui-btn_mini weui-btn_default"><image src="/assets/images/play.png" class="weui-btn_cell__icon" mode="aspectFit"></image></a>
      </view>
    </post>
    <post generic:contentType="list" fsui="list-style"></post>
    <post generic:contentType="list" fsui="list-style"></post>
  </view>

  <view class="copyright">Powered by Fresns</view>
